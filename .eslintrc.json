{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "standard-with-typescript",
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": ["./tsconfig.json"]
    },
    "rules": {
        "@typescript-eslint/strict-boolean-expressions": [
            "warn",
            {
          "allowString": true,
          "allowNumber": true,
          "allowNullableObject": true,
          "allowNullableBoolean": true,
          "allowNullableNumber": false,
          "allowNullableString": true,
          "allowAny": false
            }
          ]
    }
}
